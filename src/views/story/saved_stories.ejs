<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
    <title>Saved Stories</title>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <% include ../static/partials/messages.ejs %>

    <main>
      <h2 class="saved-stories header-title">Saved Stories</h2>
      <section class="story-cards">
        <% stories.forEach((story) => { %>
        <div class="story-card">
          <a href="<%= story.story.url %>">
            <img src="<%= story.story.urlToImage %>" alt="Image of <%= story.story.title %>"  class="story-card-img">
            <h3 class="story-title"><%= story.story.title %></h3>
            <p class="story-description"><%= story.story.description %></p>
          </a>
          <form action="/story/unsave" method="POST" class="save-form">
            <input type="hidden" name="storyUrl" value="<%= story.story.url %>">
            <input type="submit" value="Unsave" class="unsave-button">
          </form>
        </div>
        <% }) %>

      </section>

    </main>

    <% include ../static/partials/footer.ejs %>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
